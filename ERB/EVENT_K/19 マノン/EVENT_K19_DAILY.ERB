		IF DAILY_EV(STR:日常イベント名) == 0
			PRINTFORMW 
		;パンチラ直後
		ELSEIF COND("パンチラ直後")
			PRINTFORMW 
		ELSE
			PRINTFORMW 
		ENDIF
	;スカートをめくる
	CASEELSE
		;寝起きの胡乱な状態を襲う
		IF CFLAG:寝起き
			PRINTFORMW 
		;睡眠中の悪戯
		ELSEIF CFLAG:睡眠
			;寝言
			CALL KOJO_SLEEP_K19
			WAIT
		;初めて
		ELSEIF DAILY_EV(STR:日常イベント名) == 0
			PRINTFORMW 
		;パンチラ直後
		ELSEIF COND("パンチラ直後")
			PRINTFORMW 
		ELSE
			IF COND("挨拶前")
				PRINTFORMW 
			ELSE
				;パンツはいてない
				IF EQUIP:パンツ == 0
					PRINTFORMW 
				ELSE
					PRINTFORMW 
				ENDIF
			ENDIF
